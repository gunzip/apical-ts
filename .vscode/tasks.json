{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TypeScript Build",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "build"],
      "problemMatcher": ["$tsc"],
      "group": "build"
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "pnpm",
      "args": ["test"],
      "group": "test"
    },
    {
      "label": "Test OpenAPI 3.1 Generation",
      "type": "shell",
      "command": "pnpm",
      "args": ["generate"],
      "group": "test"
    },
    {
      "label": "Remove old generated test",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "tests/integrations/generated"],
      "group": "build"
    }
  ]
}
