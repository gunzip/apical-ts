{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "build:docs": {
      "dependsOn": ["^build:docs"],
      "outputs": ["README.md"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:check": {
      "dependsOn": ["^lint:check"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "format:check": {
      "dependsOn": ["^format:check"]
    },
    "typecheck:code": {
      "dependsOn": ["^typecheck:code"]
    },
    "typecheck:examples": {
      "dependsOn": ["^typecheck:examples"]
    },
    "typecheck:tests": {
      "dependsOn": ["^typecheck:tests"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "//#test:coverage": {
      "dependsOn": ["^build"],
      "inputs": [
        "apps/**/src/**/*.ts",
        "packages/**/src/**/*.ts",
        "actions/**/src/**/*.ts"
      ],
      "outputs": ["coverage"],
      "outputLogs": "errors-only"
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "start": {
      "dependsOn": ["^start"]
    },
    "generate": {
      "dependsOn": ["^generate"]
    },
    "generate:tests": {
      "dependsOn": ["^generate:tests"],
      "outputs": ["tests/integrations/generated"]
    },
    "generate:examples": {
      "dependsOn": ["^generate:examples"],
      "outputs": ["examples/generated"]
    },
    "prepublishOnly": {
      "dependsOn": ["^prepublishOnly"]
    },
    "release:patch": {
      "dependsOn": ["^release:patch"]
    },
    "release:minor": {
      "dependsOn": ["^release:minor"]
    },
    "release:major": {
      "dependsOn": ["^release:major"]
    }
  }
}
